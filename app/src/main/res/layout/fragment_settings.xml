<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fragment_selector"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="nl.bholanath.amoledscrumpoker.SettingsFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayoutHide"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textViewHide"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.50"
                android:fontFamily="sans-serif-thin"
                android:gravity="start"
                android:text="@string/settings_hide"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonHideYes"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_hide_true"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewHide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewHide"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textViewHideSlash"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/buttonHideYes"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/settings_divisor"/>

            <Button
                android:id="@+id/buttonHideNo"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_hide_false"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewHide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewHideSlash"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutReveal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@id/linearLayoutHide"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textViewReveal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.50"
                android:fontFamily="sans-serif-thin"
                android:gravity="start"
                android:text="@string/settings_reveal"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonRevealTap"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_reveal_tap"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewReveal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewReveal"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textViewRevealSlash"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/buttonRevealTap"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/settings_divisor"/>

            <Button
                android:id="@+id/buttonRevealSwipe"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_reveal_swipe"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewReveal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewRevealSlash"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFontSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@id/linearLayoutReveal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textViewFontSize"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.50"
                android:fontFamily="sans-serif-thin"
                android:gravity="start"
                android:text="@string/settings_font_size"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonFontSmall"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_font_size_small"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewFontSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewFontSize"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textViewFontSizeSlash"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/buttonFontSmall"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/settings_divisor"/>

            <Button
                android:id="@+id/buttonFontLarge"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_font_size_large"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewFontSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewFontSizeSlash"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutZoom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@id/linearLayoutFontSize"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textViewZoom"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.50"
                android:fontFamily="sans-serif-thin"
                android:gravity="start"
                android:text="@string/settings_zoom"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonZoomOn"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_zoom_true"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewZoom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewZoom"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textViewZoomSlash"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/buttonZoomOn"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/settings_divisor"/>

            <Button
                android:id="@+id/buttonZoomOff"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_zoom_false"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewZoom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewZoomSlash"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAnimationSpeed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@id/linearLayoutZoom"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textViewAnimationSpeed"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.50"
                android:fontFamily="sans-serif-thin"
                android:gravity="start"
                android:text="@string/settings_animation_speed"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonAnimationSpeedNormal"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_animation_speed_normal"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewAnimationSpeed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewAnimationSpeed"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textViewAnimationSpeedSlash"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/buttonAnimationSpeedNormal"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/settings_divisor"/>

            <Button
                android:id="@+id/buttonAnimationSpeedFast"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-thin"
                android:text="@string/settings_animation_speed_fast"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewAnimationSpeed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textViewAnimationSpeedSlash"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
